{% extends 'base.html.twig' %}


{% block title %}All categories
{% endblock %}


{% block body %}

	<img src="{{ asset('build/images/logo.png') }}" alt=""/>

	<h1>Toutes les categories de la table category :
	</h1>
	{% for category in categories %}

		<div>

			<h2>{{ loop.index }}
				/
				{{ category.title }}
				- Catégorie :
				{{ program.category.name }}</h2>

			<p>{{ category.synopsis }}</p>

			{# Lien vers la fiche de la category : #}

			<a href="{{ path("category_show", { id: category.id }) }}">Voir la fiche</a>

		</div>

	{% else %}

		Aucune category trouvée.

	{% endfor %}

	<a href="{{ path('app_index') }}">

		Retour à l'accueil

	</a>
{% endblock %}
